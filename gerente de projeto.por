programa {
  funcao inicio() {
    inteiro a, b, soma, subtracao


    escreva("Digite o primeiro número: ")
    leia(a)
    escreva("Digite o segundo número: ")
    leia(b)


    soma = a + b
    subtracao = a - b


    escreva("\nA soma desses dois valores é: ",soma)
    escreva("\nA subtração desses dois números é: ",subtracao)
  }
}
